<div class="container mx-auto my-6">
  <h1 class="text-3xl">Add your new item</h1>
  <%= form_for @sneaker do |f| %>
      <div class="grid grid-cols-1 gap-3 mt-4 sm:grid-cols-1">
        <div>
          <%= f.label :name ,class:"text-white"%>
          <%= f.text_field :name, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1", placeholder: "Name" %>
        </div>
        <div>
          <%= f.label :sku ,class:"text-white"%>
          <%= f.text_field :sku, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1", placeholder: "SKU" %>
        </div>
        <div>
          <%= f.label :description, class:"text-white"%>
          <%= f.text_field :description, class:"w-full px-2 py-2 bg-gray-200 rounded my-1", placeholder: "Description"%>
        </div>
        <div>
          <%= f.label :drop_date ,class:"text-white"%>
          <%= f.date_field :drop_date, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1"%>
        </div>
        <div>
          <%= f.label :estimated_ressell ,class:"text-white"%>
          <%= f.select :estimated_ressell, [["Pas de ressell", "1"], ["Ressell faible", "2"], ["Ressell moyen", "3"], ["Bon ressell", "4"], ["Excellent ressell", "5"]], {}, {class: "w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1"} %>
        </div>
         <div>
          <%= f.label :retail ,class:"text-white"%>
          <%= f.text_field :retail, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1", placeholder: "Retail price"%>
        </div>
      <div class="flex justify-center mt-6">
        <%= f.submit "Submit", class:"px-4 py-2 text-gray-200 bg-[#2C394B] rounded-md hover:bg-[#414d5d] focus:outline-none btn", role:"button" %>
      </div>
    <% end %>
  </div>
</div>
