<%= form_for @sneaker do |f| %>
    <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-1">
      <div>
        <%= f.label :name ,class:"text-white"%>
        <%= f.text_field :name, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1" %>
      </div>
       <div>
        <%= f.label :sku ,class:"text-white"%>
        <%= f.text_area :sku, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1", rows: "10" %>
      </div>
      <div>
        <%= f.label :description, class:"text-white"%>
        <%= f.text_field :description, in: 1..10 , class:"w-full px-2 py-2 bg-red-200 rounded my-1"%>
      </div>
      <div>
        <%= f.label :drop_date ,class:"text-white"%>
        <%= f.date_field :drop_date, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1"%>
      </div>
       <div>
        <%= f.label :estimated_ressell ,class:"text-white"%>
        <%= f.text_field :estimated_ressell, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded my-1"%>
      </div>
    <div class="flex justify-center mt-6">
      <%= f.submit "Submit", class:"px-4 py-2 text-gray-200 bg-[#2C394B] rounded-md hover:bg-[#414d5d] focus:outline-none btn", role:"button" %>
    </div>
  <% end %>
</div>
